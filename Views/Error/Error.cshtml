@using HeroesCup.Localization
@model HeroesCup.Web.Models.ErrorViewModel
@inject ManagerLocalizer HeroesCupLocalizer
@{
    ViewBag.Title = Model.Reason;

}
<div class="main mt-5 pt-5">
    <div class="container mt-4 pt-4">
        <div class="row mt-4 pt-4">
            <h2 class="heading2">@HeroesCupLocalizer.General[Model.Reason]</h2>
        </div>
        <div class="row mt-4 pt-4">
            <p class="body1">@HeroesCupLocalizer.General[Model.Message]</p>
        </div>
    </div>
</div>