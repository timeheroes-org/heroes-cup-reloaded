@model IEnumerable<HeroesCup.Web.Models.MissionViewModel>
@{
    var missions = Model.ToList();    
    var isLoadMoreRequest = HttpAccess.HttpContext.Request.Query["loadRequest"].ToString();
}

@if (missions.Count > 0)
{
    <div class="row">
        @foreach (var mission in missions)
        {
             <div class="col-sm-6 col-md-4 mt-md-4 pt-md-4 pt-3 mt-3">
                <div class="mission-body">
                    <a href="/mission/@mission.Slug">
                        @if (mission.IsExpired)
                        {
                        <div class="img-container text-left">
                            <img class="img-fluid expired-img mission-img-list" src="/img/@mission.ImageId"  />
                            <div class="top-left body3-bold">ПРИКЛЮЧИЛА</div>
                        </div>
                        }
                        else
                        {
                        <div class="img-container text-left">
                            <img class="img-fluid mission-img-list" src="/img/@mission.ImageId" />
                        </div>
                        }
                        <p class="mission-title body1-bold pr-md-4 pr-1 mt-4">@mission.Title</p>
                        <p class="body2 pr-md-5 pr-2">от Клуб "@mission.ClubName"</p>
                    </a>
                </div>
            </div>
        }
    </div>
}

