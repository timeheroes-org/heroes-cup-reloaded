@model HeroesCup.Web.Models.SocialNetworksMetaData

<meta property="og:url" content="@Model.Url"/>
<meta property="og:type" content="@Model.Type"/>
<meta property="og:title" content="@Model.Title"/>
<meta property="og:description" content="@Model.Title"/>
<meta property="fb:app_id" content="@Model.FacebookAppId">
<meta property="og:image" content="@Model.Image"/>
<meta property="og:image:width" content="@Model.ImageWidth"/>
<meta property="og:image:height" content="@Model.ImageHeight"/>

@if (Model.VideoUrl != null && Model.VideoType != null)
{
    <meta property="og:video" content="@Model.VideoUrl" is_preferred="true">
    <meta property="og:video:type" content="@Model.VideoType"/>
}